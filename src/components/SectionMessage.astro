---
const { thin = false } = Astro.props;
---

<section class:list={["ftco-section d-md-flex bg-light", { thin }]}>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-10 text-center">
        <h2>
          <slot name="header" />
        </h2>
        <div>
          <slot name="body" />
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .thin {
    padding: 1rem;
  }
</style>
